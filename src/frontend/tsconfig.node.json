{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false, // Changed to false
    "noUncheckedSideEffectImports": false, // Changed to false
    "noImplicitAny": false, // Added
    "allowJs": true, // Added
    "checkJs": false, // Added
    "noEmitOnError": false // Added
  },
  "include": ["vite.config.ts"]
}